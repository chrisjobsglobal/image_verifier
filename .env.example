# Application Configuration
APP_NAME=Image Verifier API
APP_VERSION=0.1.0
DEBUG=False

# API Settings
API_PREFIX=/api/v1

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIRECTORY=uploads

# Image Processing Thresholds
MIN_IMAGE_WIDTH=1920
MIN_IMAGE_HEIGHT=1080
MIN_FACE_PERCENTAGE=70.0
MAX_FACE_PERCENTAGE=80.0
MAX_TILT_ANGLE_DEGREES=10.0
BLUR_THRESHOLD=100.0
MIN_BRIGHTNESS=50
MAX_BRIGHTNESS=200
MIN_CONTRAST=40.0

# Tesseract OCR Path (adjust for your system)
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux/Mac: /usr/bin/tesseract or /usr/local/bin/tesseract
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# Security (generate a strong API key in production)
# API_KEY=your-secret-api-key-here
API_KEY_NAME=X-API-Key

# Rate Limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional External APIs
# IDANALYZER_API_KEY=
# BIOGAZE_API_KEY=

# Optional Database for Audit Trails
# DATABASE_URL=postgresql://user:password@localhost/image_verifier
